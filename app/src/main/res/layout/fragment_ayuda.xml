<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AyudaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="717dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPreguntas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Preguntas Frecuentes"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/idPregunta"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:text="多.............................................................?"
                android:textStyle="bold" />

            <Button
                android:id="@+id/idPregunta2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="20dp"
                android:text="多.............................................................?"
                android:textStyle="bold" />

            <Button
                android:id="@+id/idPregunta3"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="20dp"
                android:text="多.............................................................?"
                android:textStyle="bold" />

            <Button
                android:id="@+id/idPregunta4"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="20dp"
                android:text="多.............................................................?"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>